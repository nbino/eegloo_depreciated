            <div id="leftsearch_secondary" class="leftsearch_items" style="">
              <ul>
          		

				<li><%= f.check_box :elevator, {:onchange => "#{auto_submit('search_form')}"}, 1, 0 %> <%= f.label :elevator %></li>
	            <li><%= f.check_box :laundry, {:onchange => "#{auto_submit('search_form')}"}, 1, 0 %> <%= f.label :laundry %></li>
