            <li><%= f.check_box :maintenance_q_id, { :onchange => "#{auto_submit('search_form')}" }, MaintenanceQ.most_desirable, 0  %> Excellent Maintenance</li>
            
			<li><%= f.check_box :appliances_q_id, {:onchange => "#{auto_submit('search_form')}"}, AppliancesQ.most_desirable, 0 %> Excellent Appliances</li>
            
