<div id="note_popup_<%= listing.id %>" class="leftsearch_box" style="display:none;position:absolute;width:180px;height:160px;left:200px;z-index:1500;opacity:0.9;background: #CCFFCC;">
<%=image_tag 'cross.png', :style=>"float:right;cursor:pointer;", :onclick=>page.hide("note_popup_#{listing.id}")%>
<%remote_form_for :favorites, :url=>listing_favorite_url(listing, 0), :method=>:put, :update=>"add_note_#{listing.id}" do |f|%>
    <b>Add a note</b><br/>
    <%=f.text_area  :note, :cols => 18, :rows => 5, :style => 'float:none'%><br/>
    <%=f.submit "Add Note", :onclick=>page.hide("note_popup_#{listing.id}"), :duration => 0.5 -%>
<%end%>
</div>
