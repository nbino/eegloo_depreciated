          <%end%>
          <%li.bedrooms.each_with_index do |bedroom, i|%>
            <%=bedroom.length%> x <%=bedroom.width%>, <%=bedroom.light_level%> bedroom with <%=bedroom.window_direction%> view <%=i < li.bedrooms.size - 1 ? ',' : ''%>
